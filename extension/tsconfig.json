{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "outDir": "out",
    "lib": ["ES2019"],
    "sourceMap": true,
    "rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
